footer.page-footer
  .aligner.page-footer__inner
    div(class=setModifiers('page-footer__column', [1]))
      div(class=setModifiers('page-footer__nest', ['address']))
        +address('footer')
      div(class=setModifiers('page-footer__nest', ['logo']))
        +logo('footer')
      div(class=setModifiers('page-footer__nest', ['copyright']))
        p.copyright= '© 2016 '
          span.copyright__string Live-sound agency
    div(class=setModifiers('page-footer__column', [2]))
      div(class=setModifiers('page-footer__nest', ['navigation']))
        +main-navigation('footer')
      div(class=setModifiers('page-footer__nest', ['widget']))
        aside.widget
          .widget__inner
    div(class=setModifiers('page-footer__column', [3]))
      div(class=setModifiers('page-footer__nest', ['connection']))
        a.page-footer__tel(href='tel:+74992565704') +7 (499) 256-57-04
        .page-footer__socials
          +socials()
