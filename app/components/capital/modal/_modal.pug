.modal
  .modal__container
    ul.modal__list
      li.modal__overlay
      - for (let i = 1; i <= 7; i += 1)
        li(class=setModifiers('modal__item', [i]))
          picture.modal__image-wrapper
            source(
              media=$VIEWPORT_MIN_WIDTH_MEDIUM,
              srcset=`img/modal__image--${i}-medium.jpg`,
            )
            img(
              class=setModifiers('modal__image', [i]),
              src=`img/modal__image--${i}-small.jpg`,
              alt=`Благодарность №${i}`,
            )
          button(
            class=setModifiers('modal__close-button', [i]),
            type='button',
          )
