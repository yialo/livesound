header.page__header
  include ../page-header/_page-header.pug
main.page__main
  div(class=setModifiers('page-main', [$pageId]))
    if $pageId !== 'index'
      header.page-main__intro
        div(class=setModifiers('intro', [$pageId]))
          .aligner.intro__inner
            h1.intro__heading.heading= $pageTitle
    block page-main
footer.page__footer
  include ../page-footer/_page-footer.pug
if $pageId === 'partners'
  .page__modal
    include ../modal/_modal.pug
