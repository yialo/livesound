.history(id='cascade-slider')
  -
    const HISTORY_ITEMS = [
      'История компании: 2018 год',
      'История компании: 2016 год',
      'Компания была основана в Москве в 1990 году в ДК Московского Авиационного Института. С самого начала компания работала в нескольких направлениях звукового рынка: стадионные концерты «рок-н-ролльщиков» (ДДТ, Наутилус, Аквариум), эстрада (Алла Пугачева, Лайма Вайкуле, Валерий Леонтьев, Олег Газманов), дискотеки и элитные ночные клубы (Арлекино, Пентхаус).',
      'История компании: 2012 год',
      'История компании: 2010 год',
    ];
    const HISTORY_BUTTONS = [
      ['next', 'Следующий'],
      ['prev', 'Предыдущий'],
    ];
  .history__inner
    h2.visually-hidden История компании
    .history__dates
      .cascade-slider
        ul.cascade-slider__slides
          - for (let i = 1, year = 2018; i <= 5; i += 1, year -= 2)
            li.cascade-slider__item
              p.history__year= year
        each item in HISTORY_BUTTONS
          - const [modifier, text] = item;
          button(
            class=setModifiers('cascade-slider__arrow', [modifier]),
            type='button',
            data-action=modifier,
            aria-label=`${text} слайд`,
          )
    .history__slider
      ul.history__list
        each item, index in HISTORY_ITEMS
          li.history__item
            p.history__content= item
