.team-gallery
  -
    const TEAM_GALLERY_SOURCES = [
      [$VIEWPORT_MIN_WIDTH_HUGE, 'huge'],
      [$VIEWPORT_MIN_WIDTH_LARGE, 'large'],
      [$VIEWPORT_MIN_WIDTH_MEDIUM, 'medium'],
    ];
  .aligner.team-gallery__inner
    h2.visually-hidden Фотографии наших сотрудников
    ul.team-gallery__list
      - for (let i = 1; i <= 6; i += 1)
        li(class=setModifiers('team-gallery__item', [i]))
          picture.team-gallery__wrapper
            each source in TEAM_GALLERY_SOURCES
              - const [viewport, modifier] = source;
              source(
                media=viewport,
                srcset=`img/team-gallery__photo--${i}-${modifier}.jpg`,
              )
            img(
              class=setModifiers('team-gallery__photo', [i]),
              src=`img/team-gallery__photo--${i}-small.jpg`,
              alt=`Наша команда, фото ${i}`,
            )
