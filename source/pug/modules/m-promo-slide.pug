mixin promo-slide(promoSlideNumber, promoSlideTitle, promoSlideSubitle)
  .promo-slide(class=`promo-slide--${promoSlideNumber}`)
    if promoSlideNumber === 2
      .promo-slide__video-wrapper
        video.promo-slide__video()
    .promo-slide__inner.aligner
      .promo-slide__content
        h3.promo-slide__title= promoSlideTitle
        p.promo-slide__subtitle= promoSlideSubitle
