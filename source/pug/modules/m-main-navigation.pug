mixin main-navigation(pageName, position)
  -
    const MAIN_NAVIGATION_ITEMS = [
      ['Главная', 'index'],
      ['О компании', 'about'],
      ['Проекты', 'projects'],
      ['Команда', 'team'],
      ['Оборудование', 'equipment'],
      ['Клиенты/Партнеры', 'partners'],
      ['Контакты', 'contacts'],
    ];
  nav(class=['main-navigation', `main-navigation--${position}`])
    ul.main-navigation__list
      each item in MAIN_NAVIGATION_ITEMS
        -
          const [text, modifier] = item;
          const currentItemClass = (modifier === pageName)
            ? 'is-current'
            : null;
        li.main-navigation__item(class=currentItemClass)
          a.main-navigation__link(
            class=currentItemClass,
            href=`${modifier}.html`,
          )= text
