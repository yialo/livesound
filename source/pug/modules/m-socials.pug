mixin socials(socials_options)
  - var locationClass = '';
  if (socials_options.blockId === 'contacts')
    - locationClass = {class: `socials--${socials_options.blockId}`};
  aside.socials&attributes(locationClass)
    ul.socials__list
      mixin socials__item(socialsItem_options)
        li.socials__item
          a.socials__link(class=`socials__link--${socialsItem_options.modifier}` href='#')
            span.visually-hidden= socialsItem_options.name
      +socials__item({
        modifier: 'instagram',
        name: 'Instagram'
      })
      +socials__item({
        modifier: 'youtube',
        name: 'YouTube'
      })
      +socials__item({
        modifier: 'facebook',
        name: 'Facebook'
      })
