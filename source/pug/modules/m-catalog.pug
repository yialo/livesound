mixin catalog()
  section.catalog
    div.catalog__inner.aligner
      h2.visually-hidden
      ul.catalog__list
        mixin catalog__item(catalogGroupCaption)
          li.catalog__item
            h3.catalog__item-caption(tabindex="0")= catalogGroupCaption
            div.catalog__item-content
              +catalog-volume()
        +catalog__item('Акустические системы линейного массива')
        +catalog__item('Активные акустические системы')
        +catalog__item('Пассивные акустические системы')
        +catalog__item('Мониторы сценические')
        +catalog__item('Усилители')
        +catalog__item('Цифровые микшерные пульты')
        +catalog__item('Аналоговые микшерные пульты')
        +catalog__item('Радиосистемы')
        +catalog__item('Системы мониторинга In-Ear')
