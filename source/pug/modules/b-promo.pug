section(class="promo page-main__promo")
  h2(class="promo__heading visually-hidden") Промо-блок
  div(class="promo__slider")
    ul(class="promo__list")
      li(class="promo__item")
        include b-promo-slide--1.pug
      li(class="promo-slide promo__item promo__item--current")
        include b-promo-slide--2.pug
      li(class="promo-slide promo__item")
        include b-promo-slide--3.pug
      li(class="promo-slide promo__item")
        include b-promo-slide--4.pug
  div(class="slider-controls promo__slider-controls")
    ul(class="slider-controls__list")
      li(class="slider-controls__item")
        button(class="slider-controls__button" type="button")
          span(class="visually-hidden") Слайд №1
      li(class="slider-controls__item")
        button(class="slider-controls__button is-current" type="button")
          span(class="visually-hidden") Слайд №2
      li(class="slider-controls__item")
        button(class="slider-controls__button" type="button")
          span(class="visually-hidden") Слайд №3
      li(class="slider-controls__item")
        button(class="slider-controls__button" type="button")
          span(class="visually-hidden") Слайд №4
