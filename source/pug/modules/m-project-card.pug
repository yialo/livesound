- var projectCardImagePathPrefix = 'img/project-card__image--';

mixin project-card(projectCardNumber, projectGroupName)
  .project-card
    a.project-card__link(href="#")
      picture
        source(
          media=viewportLargeMinWidth
          srcset=`${projectCardImagePathPrefix}${projectCardNumber}-large.jpg`
        )
        source(
          media=viewportMediumMinWidth
          srcset=`${projectCardImagePathPrefix}${projectCardNumber}-medium.jpg`
        )
        img.project-card__image(
          class=`project-card__image--${projectCardNumber}`
          src=`${projectCardImagePathPrefix}${projectCardNumber}-small.jpg`
          alt=projectGroupName
        )
      h3.project-card__caption
        span.project-card__caption-text.heading= projectGroupName
