include m-logo.pug
include m-main-navigation.pug

mixin page-header(pageName)
  header.page-header
    div.page-header__inner.aligner
      div.page-header__menu-controls
        include ../modules/b-menu-controls.pug
      div.page-header__logo
        +logo('header', pageName)
      div.page-header__navigation
        +main-navigation(pageName, 'header')
      div.page-header__language-toggle
        include ../modules/b-language-toggle.pug
